@model IEnumerable<WebCC.ManageManager_V>

@{
    ViewBag.Title = "ManageManager";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h2>ManageManager</h2>

<script>
    $(function () {
        //显示添加界面
        $("#showAddPanel").click(function () {
            Avgrund.show("#elementID");
        });
        //取消显示添加界面
        $("#Add_Cancel").click(function () {
            Avgrund.hide();
        });
        $("#Add_Ok").click(function () {
            $.ajax({
                type: "post",
                data: {
                    IDAuthority: $('#Auth_ID').val(),
                    NumberArranger: $('#Manager_Num').val(),
                    NameArranger: $('#Manager_Name').val(),
                    EmailArranger : $('#Manager_Email').val(),
                    AgeArranger: $('#Manager_Age').val(),
                    SexArranger: $('#Manager_Sex').val(),
                    PhoneNumArranger: $('#Manager_PhoneNum').val(),
                    PasscodeArranger:$('#Manager_Pwd').val(),
                },
                url: "ManageManager_Add",
                datatype: "Json",
                success: function (data)
                {
                    alert(data.msg);
                },
                error: function ()
                {
                    alert("Error");
                }
            });
            $('#Auth_ID').val("");
            $('#Manager_Num').val("");
            $('#Manager_Name').val("")
            $('#Manager_Email').val("");
            $('#Manager_Age').val("");
            $('#Manager_Sex').val("")
            $('#Manager_PhoneNum').val("");
            $('#Manager_Pwd').val("");
        });
    })

</script>
<p>
    <input type="button" id="showAddPanel" value="添加管理员" />
</p>
<div id="elementID" class="avgrund-popup">
    <style>
        .Internal_Style {
