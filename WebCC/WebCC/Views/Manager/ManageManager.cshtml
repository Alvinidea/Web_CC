        <input type="text" id="Manager_Name" placeholder="请输入姓名" required="required" />
        <input type="email" id="Manager_Email" placeholder="请输入Email" required="required" />
        <input type="number" id="Manager_Age" placeholder="请输入年龄" required="required" />
        <input type="text" id="Manager_Sex" placeholder="请输入性别" required="required" />
        <input type="number" id="Manager_PhoneNum" placeholder="请输入手机号" required="required" />
        <input type="text" id="Manager_Pwd" placeholder="请输入密码" value="000000" required="required" />
        <p>
            <input type="button" id="Add_Ok" value="添加管理员" />
            <input type="button" id="Add_Cancel" value="取消" />
