                                <li>@Html.ActionLink("修改密码", "ModifyPwd", "Student")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-fw fa-wifi"></i>
                                课程信息
                            <span class="caret"></span></a>
                            <ul id="bbslist3" class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("已选课程", "StudentFinishedChooseCourse", "Student")</li>                              
                                <li>@Html.ActionLink("选课", "StudentBeginNewCourse", "Student")</li>
                                <li>@Html.ActionLink("选课(更新)", "StudentBeginNewCourse_jsonGet", "Student")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-fw fa-wifi"></i>
                                成绩信息
                                <span class="caret"></span>
                            </a>
                            <ul id="bbslist4" class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("成绩单", "StudentGetGrade", "Student")</li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        @*</div>*@
        <div class="Stu_RightBody">
            <div class="panel panel-primary">
                <div class="panel-heading">Student Operation</div>
                <div class="panel-body">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <div class="Stu_footer">
        <footer>
            <p>&copy; @DateTime.Now.Year - Web选课系统</p>
        </footer>
    </div>

</body>
</html>
